{
  "$id": "light.json",
  "title": "Light",
  "type": "object",
  "description": "Light data",
  "required": ["id", "type"],
  "properties": {
    "id": {
      "$ref": "sensor-id.json"
    },
    "type": {
      "type": "string",
      "const": "RGBLight"
    },
    "hue": {
      "type": "number",
      "minimum": 0,
      "maximum": 359
    },
    "saturation": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "value" : {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "mapPosition": {
      "$ref": "map-point.json"
    }
  }
}
